{
  "name": "rethinkdb-elasticsearch-stream",
  "version": "1.0.0",
  "main": "build/index.js",
  "repository": "https://github.com/gsandf/rethinkdb-elasticsearch-stream",
  "author": "Blake Knight <bknight@gsandf.com> (http://blakek.me/)",
  "license": "MIT",
  "ava": {
    "babel": "inherit",
    "require": ["babel-register"]
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": true
          }
        }
      ],
      "stage-0"
    ]
  },
  "eslintConfig": {
    "extends": "gsandf"
  },
  "scripts": {
    "build": "babel src --out-dir build",
    "dev": "babel-watch --inspect src/index.js",
    "lint": "eslint ./src",
    "start": "node .",
    "test": "ava",
    "test:container": "docker-compose build && docker-compose run app yarn test; docker-compose down"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^4.5.0",
    "eslint-config-gsandf": "^0.3.0",
    "prettier-eslint-cli": "^4.2.1"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "rethinkdbdash": "^2.3.31",
    "through2": "^2.0.3"
  }
}
