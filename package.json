{
  "name": "rethinkdb-elasticsearch-stream",
  "version": "2.1.0",
  "main": "build/index.js",
  "repository": "https://github.com/gsandf/rethinkdb-elasticsearch-stream",
  "author": "Blake Knight <bknight@gsandf.com> (http://blakek.me/)",
  "license": "MIT",
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": true
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "gsandf"
  },
  "scripts": {
    "build": "babel src --out-dir build --ignore *.test.js,test-helpers",
    "container": "docker-compose run app",
    "coverage": "nyc ava",
    "coverage:container": "docker-compose build && docker-compose run app yarn coverage; docker-compose down",
    "dev": "babel-node --inspect src/index.js",
    "lint": "eslint ./src",
    "prepublish": "yarn build",
    "start": "node .",
    "test": "ava src/**/*.test.js",
    "test:container": "docker-compose build && docker-compose run app yarn test -- -v; docker-compose down"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ava": "^1.1.0",
    "eslint": "^5.12.0",
    "eslint-config-gsandf": "^1.0.0",
    "nock": "^10.0.6",
    "nyc": "^13.1.0",
    "p-retry": "^3.0.1",
    "prettier-eslint-cli": "^4.2.1"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "rethinkdb": "^2.3.3",
    "rethinkdb-changefeed-reconnect": "^0.3.2",
    "rethinkdbdash": "^2.3.31",
    "through2": "^3.0.0"
  }
}
